{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES6",
    "lib": [
      "DOM.Iterable",
      "DOM"
    ],
    "module": "ES6",
    "allowJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "./dist/**/*",
  ],
}